{
  "dir": {
    "src": "src/",
    "dist": "dist/"
  },
  "jsSetting": {
    "src": "src/js/**/*.js",
    "dist": "dist/js/",
    "srcApps": "src/js/apps/*.js",
    "libsApps": "src/js/libs/*.js",
    "minifyFileName": "avatar.min.js"
  },
  "fontsSetting": {
    "src": "src/font/**/*",
    "dist": "dist/font/"
  },
  "imgSetting": {
    "src": [
      "src/img/**/*.{png,jpg,jpeg,gif,svg,ico}",
      "src/img/*.{png,jpg,jpeg,gif,svg,ico}",
      "!src/img/sprites/**/*.png",
      "!src/img/sprites-svg/**/*.svg",
      "!src/img/inline-svg/*.svg"
    ],
    "watchSrc": [
      "src/img/**/*.{png,jpg,jpeg,gif,svg,ico}",
      "src/img/*.{png,jpg,jpeg,gif,svg,ico}",
      "!src/img/sprites/**/*.png",
      "!src/img/sprites-svg/**/*.svg",
      "!src/img/inline-svg/*.svg"
    ],
    "apartWatchSrc":[
      "src/img/sprites/**/*.png",
      "src/img/sprites-svg/**/*.svg"
    ],
    "dist": "dist/img/",
    "svg": "src/img/inline-svg/*.svg",
    "minOpts": {
      "optimizationLevel": 5
    }
  },
  "htmlSetting": {
    "src": "src/**/*.{html,ejs}",
    "dist": "dist/views",
    "except": "src/views/include/*.ejs"
  },
  "cssSetting": {
    "src": "src/css/scss/**/*.scss",
    "dist": "dist/css/",
    "libs": "src/css/libs/**/*",
    "sprites": "src/css/sprites-data/*.*",
    "sassOptsCp": {
      "outputStyle": "compressed",
      "errLogToConsole": false
    },
    "sassOptsEx": {
      "outputStyle": "expanded",
      "errLogToConsole": false
    }
  },
  "autoprefixer": ["> 1%", "last 2 versions", "iOS 10", "Android 2.3", "Firefox ESR", "IE 10"]
}